{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Approvement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Request</th>
                <th>Accepted</th>
                <th>Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('achie_backend_approvement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.request }}</td>
                <td>{{ entity.accepted }}</td>
                <td>{{ entity.reason }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('achie_backend_approvement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('achie_backend_approvement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('achie_backend_approvement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
